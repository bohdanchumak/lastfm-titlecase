{
	"manifest_version": 3,
	"name": "Last.fm Title Case",
	"browser_specific_settings": {
		"gecko": {
			"id": "lastfm-titlecase@bohdanchumak.github.io",
			"data_collection_permissions": {
				"required": ["none"]
			}
		}
	},
	"version": "1.2.0",
	"description": "Fixes song, album, and artist name casing on Last.fm",
	"icons": {
		"16": "icons/icon16.png",
		"48": "icons/icon48.png",
		"128": "icons/icon128.png"
	},
	"permissions": ["storage", "contextMenus"],
	"action": {},
	"background": {
		"service_worker": "src/background.js",
		"scripts": ["src/background.js"]
	},
	"options_ui": {
		"page": "src/config.html",
		"open_in_tab": true
	},
	"content_scripts": [
		{
			"matches": [
				"https://www.last.fm/*",
				"https://last.fm/*"
			],
			"js": [
				"dist/content.js"
			]
		}
	]
}
